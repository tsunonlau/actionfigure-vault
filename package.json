{
  "name": "actionfigure-vault-shipping-complete",
  "version": "3.0.0",
  "description": "ActionFigure Vault with PayPal Shipping Module, Multi-Currency Support, and Server-side Callbacks",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "paypal",
    "shipping-module",
    "multi-currency",
    "action-figures",
    "nodejs",
    "express",
    "server-side-callbacks"
  ],
  "author": "ActionFigure Vault Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/actionfigure-vault/paypal-shipping-complete"
  },
  "bugs": {
    "url": "https://github.com/actionfigure-vault/paypal-shipping-complete/issues"
  },
  "homepage": "https://actionfigurevault.com",
  "features": [
    "PayPal Orders v2 API with Shipping Module",
    "Server-side Shipping Callbacks",
    "Multi-currency Support (HKD, USD, GBP)",
    "Dynamic Shipping Rate Calculation", 
    "Country-specific Shipping Rules",
    "Enhanced Product Fields (SKU, UPC, URLs)",
    "PayPal Pay Later Messaging",
    "Professional E-commerce UI"
  ],
  "shipping": {
    "supportedCountries": ["HK", "US", "GB", "CA", "AU", "SG", "JP"],
    "currencies": ["HKD", "USD", "GBP"],
    "freeShippingThreshold": 300,
    "callbacksEnabled": true
  }
